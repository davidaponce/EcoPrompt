{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~*": ["./*"]
    },
    "types": ["chrome"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".plasmo/index.d.ts"],
  "exclude": ["node_modules"]
}